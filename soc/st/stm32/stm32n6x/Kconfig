config SOC_SERIES_STM32N6X
	select ARM
	select CPU_CORTEX_M55
	select ARM_TRUSTZONE_M
	select CPU_HAS_ARM_SAU
	select CPU_HAS_ARM_MPU
	select CPU_HAS_FPU
	select CPU_HAS_ICACHE
	select CPU_HAS_DCACHE
	select ARMV8_M_DSP
	select CPU_CORTEX_M_HAS_DWT
	select HAS_STM32CUBE
	select INIT_ARCH_HW_AT_BOOT

config STM32N6_FSBL
	bool "Enable First Stage Boot Loader Mode"
	select PLATFORM_SPECIFIC_INIT
	select TRUSTED_EXECUTION_SECURE

config STM32N6_FSBL_DEBUG
	bool "FSBL specific debug flag"
	help
	  Enable to debug FSBL application

config STM32N6_CUT1
	bool "Enable Cut1 compatible code"
	help
	  Temporary. DNM
